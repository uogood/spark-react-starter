{
  "name": "SparkReactStarter",
  "version": "1.0.0",
  "description": "A universal/isomorphic React starter project by the team at Spark Consulting that includes: es6, babel, webpack, react, react router, redux, hot reload, etc.",
  "keywords": [
    "es6",
    "babel",
    "webpack",
    "react",
    "react router",
    "redux",
    "hot reload"
  ],
  "contributors": "https://github.com/jkudish/spark-react-starter/graphs/contributors",
  "repository": "https://github.com/jkudish/spark-react-starter",
  "homepage": "https://github.com/jkudish/spark-react-starter",
  "bugs": "https://github.com/jkudish/spark-react-starter/issues",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "client-dev": "cross-env NODE_ENV=development webpack-dev-server --config tools/webpack/client/dev.js",
    "server-dev": "cross-env NODE_ENV=development webpack --watch --verbose --colors --display-error-details --config tools/webpack/server/dev.js",
    "server-dev-start": "node node_modules/just-wait --pattern \"dist/*.js\" && cross-env NODE_ENV=development nodemon dist/server.js",
    "dev": "concurrently --kill-others \"npm run server-dev-start\" \"npm run server-dev\" \"npm run client-dev\"",
    "build-server": "cross-env NODE_ENV=production webpack --colors --display-error-details --config tools/webpack/server/production.js",
    "build-client": "cross-env NODE_ENV=production webpack --colors --display-error-details --config tools/webpack/client/production.js",
    "build": "concurrently \"npm run build-server\" \"npm run build-client\"",
    "lint": "eslint src/ tools/ --fix & pug-lint src/",
    "test": "npm run lint && mocha src/**/test.js --compilers js:babel-register",
    "test-cov": "istanbul cover ./node_modules/mocha/bin/_mocha -- src/**/test.js --compilers js:babel-register",
    "postinstall": "npm run build"
  },
  "engines": {
    "node" : "6.2.2"
  },
  "author": "Joey Kudish",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "cross-env": "^1.0.8",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-mocha": "^3.0.0",
    "eslint-plugin-react": "^5.2.2",
    "file-loader": "^0.8.5",
    "istanbul": "^1.0.0-alpha.2",
    "just-wait": "^1.0.5",
    "mocha": "^2.5.3",
    "mocha-text-cov": "^0.1.1",
    "nodemon": "^1.9.2",
    "pug": "^2.0.0-beta3",
    "pug-lint": "^2.2.2",
    "react-addons-test-utils": "^15.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-node-externals": "^1.2.0"
  },
  "dependencies": {
    "h2o2": "^5.1.0",
    "hapi": "^13.4.1",
    "inert": "^4.0.0",
    "radium": "^0.17.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  }
}
